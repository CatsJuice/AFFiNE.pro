// Default theme is light
:root
  --brand: var(--el-color-primary)
  --brand-gradient: linear-gradient(180deg, #6999FF 0%, #5438FF 100%)
  --v-primary-rgb: 66, 66, 66
  --v-secondary-rgb: 255, 255, 255
  --primary: #424242
  --primary-gray: #747474
  --secondary: #fff
  --container-padding: 40px
  --divider-color: #E0E0E0

// Custom dark theme color
html.dark
  --brand-gradient: linear-gradient(180deg, #0E55EE 0%, #002A86 100%)
  --v-primary-rgb: 255, 255, 255
  --v-secondary-rgb: 0, 0, 0
  --primary: #fff
  --primary-gray: #e6e6e6
  --secondary: #000
